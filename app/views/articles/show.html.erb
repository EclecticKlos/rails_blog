<div class="article_content">
  <h1 class="title"><%= @article.title %></h1>

  <p class="body">
    <%= @article.text %>
  </p>

  <p class="article_timestamp">
    Written <%= time_ago_in_words(@article.created_at) %> ago
    <% if user_signed_in? %>
      | <%= link_to 'Edit', edit_article_path(@article) %>
      | <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm:
        "Are you sure?"} %>
    <% end %>
  </p>

  <div class="comments">
    <h2><%= @article.comments.count %> comments</h2>
    <%= render @article.comments %>
  </div>

  <h3>Add a comment:</h3>
  <%= render 'comments/form' %>

  <%= link_to 'All articles', root_path %>
</div>
