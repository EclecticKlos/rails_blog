<div class="comment clearfix">
  <div class="comment_content">
    <p class="comment_name"><strong><%= comment.commenter %></strong></p>
      <p class="comment_body"><strong><%= comment.body %></strong></p>
      <p class="comment_timestamp">Written <%= time_ago_in_words(comment.created_at) %> ago</p>
  </div>

  <p>
    <%= link_to 'Delete Comment', [comment.article, comment],
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
  </p>
</div>
